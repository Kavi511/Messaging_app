<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_dark">

    <!-- My Status Section -->
    <LinearLayout
        android:id="@+id/my_status_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground">

        <!-- My Status Avatar -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/my_status_avatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/my_status_avatar_background"
                android:gravity="center"
                android:text="?"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Add Status Icon -->
            <TextView
                android:id="@+id/add_status_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/add_status_background"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- My Status Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Status"
                android:textColor="@color/foreground_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to add status update"
                android:textColor="@color/muted_foreground_dark"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="88dp"
        android:background="@color/border_dark" />

    <!-- Recent Updates Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Recent updates"
        android:textColor="@color/muted_foreground_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Status Item -->
    <LinearLayout
        android:id="@+id/status_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground">

        <!-- Status Avatar -->
        <TextView
            android:id="@+id/status_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/status_avatar_background"
            android:gravity="center"
            android:text="?"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Status Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/foreground_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 minutes ago"
                android:textColor="@color/muted_foreground_dark"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
