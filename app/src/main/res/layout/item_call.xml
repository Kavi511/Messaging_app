<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <!-- Call Avatar -->
    <TextView
        android:id="@+id/call_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/call_avatar_background"
        android:gravity="center"
        android:text="?"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Call Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/call_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="@color/foreground_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Call Direction Icon -->
            <ImageView
                android:id="@+id/call_direction_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_call_outgoing"
                android:tint="@color/primary_dark" />

            <TextView
                android:id="@+id/call_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 January, 10:53 pm"
                android:textColor="@color/muted_foreground_dark"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Call Type Icon -->
    <ImageView
        android:id="@+id/call_type_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_video_call"
        android:tint="@color/primary_dark" />

</LinearLayout>
